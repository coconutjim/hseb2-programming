#ifndef LAMBERTBRDF_CGH_INCLUDED
#define LAMBERTBRDF_CGH_INCLUDED

#include "BRDF.cgh"

struct LambertBRDF: BRDF
{
// private:
    Spectrum rho;

// BRDF interface:
    Spectrum Evaluate(
        in DifferentialSurface surface,
        in float3 omega_i,
        in float3 omega_o
        )
    {
        return rho / 3.1415f;
    }
};


#endif
