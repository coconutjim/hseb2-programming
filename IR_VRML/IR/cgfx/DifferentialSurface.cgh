#ifndef DIFFERENTIALSURFACE_CGH_INCLUDED
#define DIFFERENTIALSURFACE_CGH_INCLUDED

// Describes a differential surface for lighting calculations.
struct DifferentialSurface
{
    float3 x;	// position
    float3 n;	// normal
    float2 uv;	// surface parameters (usually TexCoords)
    float3 tu;	// tangent wrt u
    float3 tv;	// tangent wrt v
};

#endif
